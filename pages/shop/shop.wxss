    justify-content: space-around;
}
.type_item {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.type_item image {
    width: 30px;
    height: 30px;
}
.type_item text {
    margin-top: 10rpx;
    font-size: 28rpx;
}
.headView {
    margin-top: 20rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
}
.headView image {
    margin-left: 30rpx;
    width: 35rpx;
    height: 35rpx;
}
.headView text {
    margin-left: 24rpx;
}
